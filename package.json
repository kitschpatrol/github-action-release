{
  "name": "github-action-release",
  "version": "2.0.8",
  "description": "GitHub Action for creating GitHub Releases.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitschpatrol/github-action-release.git"
  },
  "author": "softprops",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20.15.1",
    "pnpm": ">=9.0.0"
  },
  "main": "lib/main.js",
  "keywords": [
    "github-action",
    "action"
  ],
  "scripts": {
    "build": "ncc build src/main.ts --minify",
    "build-debug": "ncc build src/main.ts --v8-cache --source-map",
    "fix": "pnpm prettier-config --fix",
    "lint": "pnpm prettier-config --check",
    "test": "jest",
    "updatetag": "git tag -d v2 && git push origin :v2 && git tag -a v2 -m '' && git push origin v2"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@octokit/plugin-retry": "^7.1.1",
    "@octokit/plugin-throttling": "^9.3.1",
    "glob": "^11.0.0",
    "mime": "^3.0.0"
  },
  "devDependencies": {
    "@kitschpatrol/prettier-config": "^4.7.5",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/mime": "^3.0.1",
    "@types/node": "^20.14.11",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.3.1",
    "jest-circus": "^29.3.1",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-formatter": "^7.2.2"
  }
}
